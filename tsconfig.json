{
  "include": ["crawler/**/*.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/node_modules/*", "**/*.test.ts", "tmp"],
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "esnext",
    "target": "es2020",
    // For nodejs:
    "lib": ["esnext", "ES2020", "DOM", "DOM.Iterable"],
    "types": ["node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    "noImplicitAny": true,                       // 禁止隐式any
    "strictNullChecks": true,                    // 严格空值检查
    "noUnusedLocals": true,                      // 禁止未使用的变量
    "noUnusedParameters": true,                  // 禁止未使用的参数
    // "noImplicitReturns": true,                   // 强制函数返回值完整
    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "esModuleInterop": true,

    "paths": { "@/*": ["./src/*"] },               // 别名配置（适配前端项目）
    "outDir": "./dist",                          // 编译输出目录
    "noEmit": false,                             // 允许输出编译文件（提交检查需开启）

    "resolveJsonModule": true,                   // 支持导入JSON文件
    "noEmitOnError": true                        // 编译错误时不输出文件
  }
}
